---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import FormattedDate from "../components/svelte/FormattedDate.svelte";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />

    <!-- The css is a little wack but Idk how to use tailwind styles here -->
    <style is:inline>
      p {
        font-size: 16px;
        /* margin: 1rem 0; */
      }

      pre {
        font-size: 1rem !important;
        line-height: 1.25;
        padding: 0.75rem 1rem;
        font-family: "Space Mono", monospace;
        border-radius: 1rem;
        background-color: #f1f1f1 !important;
        /* margin: 1rem 0 !important; */
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: "Poppins", sans-serif;
        color: #404040;
        /* margin: 1rem 0 !important; */
      }

      h1 {
        font-size: 4rem !important;
        line-height: 1;
      }

      h2 {
        font-size: 3rem !important;
        line-height: 1;
      }

      h3 {
        font-size: 2rem !important;
        line-height: 1;
      }
    </style>
  </head>

  <body class="px-4 md:px-40 lg:px-80">
    <small><FormattedDate myDate={pubDate} /></small>
    <div class="text-6xl flex flex-col gap-8 text-neutral-500 pb-8">
      <slot />
    </div>
  </body>
</html>
